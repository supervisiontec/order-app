<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <!--item code, primaryText and print description-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgLink"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/ic_link" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_toEndOf="@+id/imgLink"
                android:layout_toRightOf="@+id/imgLink"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="001"
                    style="@style/AppTheme.TextLarge.Dark"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="item code"
                    style="@style/AppTheme.TextSmall"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tooth Brush"
                    style="@style/AppTheme.TextLarge.Dark" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="item name"
                    style="@style/AppTheme.TextSmall" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />

                <TextView
                    android:id="@+id/print_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Signal Tooth Brush"
                    style="@style/AppTheme.TextLarge.Dark" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="print description"
                    style="@style/AppTheme.TextSmall" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="16dp"
                    android:background="@color/colorPrimary" />
            </LinearLayout>
        </RelativeLayout>

        <!--item categories-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgCategory"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/ic_group" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_toEndOf="@+id/imgCategory"
                android:layout_toRightOf="@+id/imgCategory"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/department"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hardware Items"
                    style="@style/AppTheme.TextLarge.Dark" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="department"
                    style="@style/AppTheme.TextSmall"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />

                <TextView
                    android:id="@+id/main_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Brush"
                    style="@style/AppTheme.TextLarge.Dark" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="main category"
                    style="@style/AppTheme.TextSmall" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />

                <TextView
                    android:id="@+id/sub_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Signal"
                    style="@style/AppTheme.TextLarge.Dark" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="sub category"
                    style="@style/AppTheme.TextSmall" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="16dp"
                    android:background="@color/colorPrimary" />
            </LinearLayout>
        </RelativeLayout>


        <!--prices-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgMoney"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/ic_money" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_toEndOf="@+id/imgMoney"
                android:layout_toRightOf="@+id/imgMoney"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/retail_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rs. 1,099.00"
                    style="@style/AppTheme.TextLarge.Dark" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="retail price"
                    style="@style/AppTheme.TextSmall" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />


                <TextView
                    android:id="@+id/max_discount_percent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rs. 1,099.00"
                    style="@style/AppTheme.TextLarge.Dark" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="maximum discount percent"
                    style="@style/AppTheme.TextSmall" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />

                <TextView
                    android:id="@+id/cost_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rs. 1,099.00"
                    style="@style/AppTheme.TextLarge.Dark" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="cost price"
                    style="@style/AppTheme.TextSmall" />
            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
